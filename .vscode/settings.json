{
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "path": "cmd.exe",
            "args": []
        }
    },
    "git.postCommitCommand": "sync",
    "editor.formatOnSave": true,
    "gutterpreview.imagePreviewMaxHeight": 10,
    "ShortcutMenuBar.beautify": false,
    "ShortcutMenuBar.navigateBack": false,
    "ShortcutMenuBar.navigateForward": false,
    "ShortcutMenuBar.openFilesList": true,
    "ShortcutMenuBar.toggleWordWrap": false,
    "ShortcutMenuBar.saveAll": true,
    "ShortcutMenuBar.openSettings": true,
    "ShortcutMenuBar.quickOpen": false,
    "ShortcutMenuBar.showCommands": false,
    "settings.cycle": [
        {
            "id": "explorerSort2", // must be unique
            "overrideWorkspaceSettings": true,
            "values": [
                {
                    "explorer.sortOrder": "name"
                },
                {
                    "explorer.sortOrder": "type"
                },
                {
                    "explorer.sortOrder": "modified"
                },
            ],
        },
    ],
    "actionButtons": {
        "defaultColor": "#ff0034",
        "reloadButton": "♻️",
        "loadNpmCommands": false,
        "commands": [
            {
                "name": "Note",
                "color": "white",
                "useVsCodeApi": false,
                "command": "code note.txt && exit",
            },
            {
                "name": "Setting",
                "color": "green",
                "useVsCodeApi": true,
                "command": "workbench.action.openSettings2",
            },
            {
                "name": "KeyBind",
                "color": "green",
                "useVsCodeApi": true,
                "command": "workbench.action.openGlobalKeybindings",
            },
            {
                "name": "ToggleSpell",
                "color": "green",
                "useVsCodeApi": true,
                "command": "cSpell.toggleEnableSpellChecker",
            },
            {
                "name": "GoTo",
                "color": "green",
                "useVsCodeApi": true,
                "command": "workbench.action.gotoLine",
            },
            {
                "name": "FoldAll",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.foldLevel2"
            },
            {
                "name": "Unfold",
                "color": "orange",
                "useVsCodeApi": true,
                "command": "editor.unfoldAll"
            },
            {
                "name": "ExplorerSort",
                "color": "yellow",
                "useVsCodeApi": true,
                "command": "settings.cycle.explorerSort2",
            },
        ],
    },
    "cSpell.words": [
        "rivt",
        "rivtlib"
    ],
    "cSpell.suggestionMenuType": "quickFix",
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#2a2570",
        "tab.inactiveBackground": "#505052",
        "statusBar.background": "#172335",
    },
    "workbench.panel.defaultLocation": "right",
    "python.defaultInterpreterPath": "c:\\Python313\\python.exe",
    "explorer.sortOrder": "name",
    "editor.hover.enabled": "off",
    "editor.parameterHints.enabled": false,
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "workbench.editor.tabSizing": "shrink",
    "editor.rulers": [
        {
            "column": 80,
            "color": "#4b4b55"
        },
    ]
}